<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="520.0" prefWidth="586.0" spacing="20.0" stylesheets="@../Styling/MainView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainViewController">
    <ImageView fx:id="imageView" fitHeight="418.0" fitWidth="583.0" />
    <Label fx:id="titleLabel" text="Image Title" />
    <Label fx:id="contentLabel" text="Additional Information" />
    <HBox alignment="CENTER" prefHeight="103.0" prefWidth="586.0" spacing="10">
        <children>
            <Button fx:id="loadImagesButton" onAction="#onLoadImages" text="Load Images..." />
            <Button fx:id="startStopSlideshowButton" onAction="#onStartStopSlideshow" text="Start Slideshow" />
            <Button fx:id="previousButton" onAction="#onPrevious" text="Previous" />
            <Button fx:id="nextButton" onAction="#onNext" text="Next" />
        </children>
    </HBox>
</VBox>
